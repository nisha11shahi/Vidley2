

@model Vidley2.ViewModels.CustomerTypeViewModel
@{
    ViewBag.Title = "Delete Customer Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h2>Are you sure you want to delete?</h2><
@using (Html.BeginForm("DeleteConfirm", "CustomerType"))
{
    @Html.HiddenFor(m => m.CustomerTypeId)
    <div class="form-group">
        @Html.LabelFor(m => m.Customertype.Type)
       <p>@Model.Customertype.Type</p>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customertype.SignUpFee)
        <p>@Model.Customertype.SignUpFee</p>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customertype.DurationInMonths)
        <p>@Model.Customertype.DurationInMonths</p>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customertype.DiscountRate)
        <p>@Model.Customertype.DiscountRate</p>
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn-primary">Delete</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

